<!DOCTYPE html>
<html lang="en">
        <!-- Head partial -->
  <%- include('../partials/head', { page: "Edit Post" } ) %>

<body class="has-navbar-fixed-top">
          <!-- Navbar Partial -->
          <%- include('../partials/nav', { routes: [
            {
              href: "/",
              title: "Home",
            
            },
            {
              href: "/new",
              title: "Create Post",
            },
            {
              href: "/",
              title: "Logout",
            },
            ] }) %>
          <section class="hero is-small has-background-light">
            <div class="hero-body">
              <h1 class="title">Edit <%= post.title %></h1>
            </div>
          </section>
          <section class="container is-max-widescreen p-5">
            <form class="box" action="/<%= post.id %>?_method=PUT" method="POST">
              <div class="field">
                <label class="label">Post Title</label>
                <div class="control">
                  <input
                    class="input"
                    type="text"
                    placeholder="Post Title"
                    name="title"
                    value="<%= post.title %>"
                  />
                </div>
              </div>
              <div class="field">
                <label class="label">Post Content</label>
                <div class="control">
                  <input
                    class="input"
                    type="text"
                    placeholder="Post Content"
                    name="content"
                    value="<%= post.content %>"
                  />
                </div>
              </div>
              <div class="field is-grouped">
                <div class="control">
                  <button class="button is-info">Update Post</button>
                </div>
              </div>
            </form>
          </section>
</html>
</body>
                                                  